{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-save",
    "os:allow-arch",
    "fs:write-all",
    "fs:allow-exists",
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}